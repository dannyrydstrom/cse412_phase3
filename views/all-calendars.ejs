<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>App | Calendars</title>
    <%- include('header');%>
</head>
<body>
    <%- include('navbar');%>
    <div class="container">
        <div class="page-header jumbotron">
            <div class="btn-toolbar pull-right">
                <div class="btn-group">
                    <a href="/create-calendar" class="btn btn-sq btn-secondary">
                        <i class="fa fa-5x fa-calendar-plus-o"></i><br/><br/>
                        Create Calendar
                    </a>
                </div>
            </div>
            <div class="btn-toolbar pull-right col-md-3 dropdown">
                <div class="btn-group">
                    <a class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-4x fa-filter"></i>
                        <ul class="dropdown-menu">
                            <li><a href="/calendar/filter/1">Relaxed</a></li>
                            <li><a href="/calendar/filter/2">Moderate</a></li>
                            <li><a href="/calendar/filter/3">Busy</a></li>
                            <li><a href="/calendars">All</a></li>
                        </ul>
                    </a>
                </div>
            </div>
            <h2>My Calendars</h2>
        </div>
        <h3> Managed Calendars </h3>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Calendar ID</th>
                    <th>Calendar Name</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i=0; i< calendars.length; i++){ %>
                <tr>
                    <td><a href="/calendar?id=<%= calendars[i].calID%>" id="<%= calendars[i].calID%>"><%= calendars[i].calID%></a></td>
                    <td><%= calendars[i].name %></td>
                </tr>
            <%}%>
            </tbody>
        </table>
        <h3> Shared Calendars </h3>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Calendar ID</th>
                    <th>Calendar Name</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i=0; i < sharedcals.length; i++){ %>
                <tr>
                    <td><a href="/calendar?id=<%= sharedcals[i].calID%>" id="<%= sharedcals[i].calID%>"><%= sharedcals[i].calID%></a></td>
                    <td><%= sharedcals[i].name %></td>
                </tr>
            <%}%>
            </tbody>
        </table>
        <h3> Group Calendars </h3>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Group ID</th>
                    <th>Calendar ID</th>
                    <th>Calendar Name</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i=0; i< groupcals.length; i++){ %>
                <tr>
                    <td><%= groupcals[i].groupID %></td>
                    <td><a href="/calendar?id=<%= groupcals[i].calID%>" id="<%= groupcals[i].calID%>"><%= groupcals[i].calID%></a></td>
                    <td><%= groupcals[i].name %></td>
                </tr>
            <%}%>
            </tbody>
        </table>
    </div>
</body>
</html>